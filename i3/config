bindsym $mod+p exec --no-startup-id clipmenu -p "clipmenu " -config ~/.config/rofi/menu.rasi
bindsym $mod+Shift+t exec --no-startup-id rofi rofi -modi emoji -show emoji -kb-custom-1 Ctrl+c -config ~/.config/rofi/menu.rasi -show-icons
bindsym $mod+Shift+w exec --no-startup-id ~/scripts/wallpaper.sh
bindsym $mod+Shift+s exec alacritty -e "ranger" 
bindsym $mod+b exec --no-startup-id firefox
bindsym Print exec flameshot gui

bindsym $mod+c kill


# change focus
bindsym $mod+h focus left; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh
bindsym $mod+j focus down; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh
bindsym $mod+k focus up; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh
bindsym $mod+l focus right; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh

# move focused window
bindsym $mod+Shift+h move left; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh
bindsym $mod+Shift+j move down; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh
bindsym $mod+Shift+k move up; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh
bindsym $mod+Shift+l move right; exec --no-startup-id ~/scripts/move-cursor-to-focused.sh

